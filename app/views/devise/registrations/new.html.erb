<div class="row">
  <div class="offset-md-3 col-md-6">
    <h2>S'inscrire</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

    <div class="form-registrations">
      <div class="form-inputs">
      <%= f.input :nom,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "nom" }%>
        <%= f.input :prenom,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "prÃ©nom" }%>
        <%= f.input :lieu,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "lieu" }%>
        <%= f.input :description,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "description" }%>
      </div>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>


      <div class="form-actions">
        <%= f.button :submit, "S'inscrire" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
